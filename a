"Peeler - छिलनेवाला" "Ladle - करछुल" "Rolling Pin - बेलन" "Tongs - चिमटा" "Whisk - फेंटनेवाला"
"Spatula - स्पैचुला" "Mixer - मिक्सर" "Blender - ब्लेंडर" "Toaster - टोस्टर" "Rice Cooker - राइस कुकर"
"Microwave - माइक्रोवेव" "Pressure Cooker - प्रेशर कुकर" "Frying Pan - फ्राइंग पैन" "Steamer - स्टीमर" "Grill - ग्रिल"
"Mortar and Pestle - सिल-बट्टा" "Measuring Cup - मापने का कप" "Bowl - कटोरी" "Tray - ट्रे" "Cutting Knife - कटिंग चाकू"
"Can Opener - कैन ओपनर" "Peeler - छिलनेवाला"
)

# Function to display vocabulary lists
show_vocabulary() {
  category=$1
  english_array=("${!2}")
  hindi_array=("${!3}")

  clear
  echo "$category"
  echo "--------------------------------------------------"
  for i in "${!english_array[@]}"; do
    echo "${english_array[$i]} - ${hindi_array[$i]}"
  done
  read -p "Press any key to return to the main menu..." anykey
  show_main_menu
}

# Main menu to choose an option
show_main_menu() {
  clear
  echo "Vocabulary Lists"
  echo "1. Opposites"
  echo "2. Masculine to Feminine"
  echo "3. Pots Names"
  echo "4. Flowers"
  echo "5. Body Parts"
  echo "6. Days of the Week"
  echo "7. Months of the Year"
  echo "8. Colors"
  echo "9. Vegetables"
  echo "10. Fruits"
  echo "11. Birds"
  echo "12. Metals"
  echo "13. Crops"
  echo "14. Clothes"
  echo "15. Classroom Things"
  echo "16. Shapes"
  echo "17. Planets and the Sun"
  echo "18. Indian Festivals"
  echo "19. Millets"
  echo "20. Kitchen Tools"
  echo "21. Exit"
  read -p "Please select an option: " option

  case $option in
    1) show_vocabulary "Opposites" english_opposites[@] hindi_opposites[@] ;;
    2) show_vocabulary "Masculine to Feminine" masculine_feminine[@] masculine_feminine[@] ;;
    3) show_vocabulary "Pots Names" pots_names[@] pots_names[@] ;;
    4) show_vocabulary "Flowers" flowers[@] flowers[@] ;;
    5) show_vocabulary "Body Parts" body_parts[@] body_parts[@] ;;
    6) show_vocabulary "Days of the Week" days[@] days[@] ;;
    7) show_vocabulary "Months of the Year" months[@] months[@] ;;
    8) show_vocabulary "Colors" colors[@] colors[@] ;;
    9) show_vocabulary "Vegetables" vegetables[@] vegetables[@] ;;
    10) show_vocabulary "Fruits" fruits[@] fruits[@] ;;
    11) show_vocabulary "Birds" birds[@] birds[@] ;;
    12) show_vocabulary "Metals" metals[@] metals[@] ;;
    13) show_vocabulary "Crops" crops[@] crops[@] ;;
    14) show_vocabulary "Clothes" clothes[@] clothes[@] ;;
    15) show_vocabulary "Classroom Things" classroom_things[@] classroom_things[@] ;;
    16) show_shapes ;;
    17) show_planets ;;
    18) show_festivals ;;
    19) show_millets ;;
    20) show_vocabulary "Kitchen Tools" kitchen_tools[@] kitchen_tools[@] ;;
    21) exit 0 ;;
    *) 
      echo "Invalid option, please try again."
      read -p "Press any key to return to the main menu..." anykey
      show_main_menu
      ;;
  esac
}

# Function to show the shapes
show_shapes() {
  clear
  echo "Shapes"
  echo "--------------------------------------------------"
  echo -e "Circle: \n${circle[@]}"
  echo -e "\nSquare: \n${square[@]}"
  echo -e "\nTriangle: \n${triangle[@]}"
  echo -e "\nRectangle: \n${rectangle[@]}"
  echo -e "\nOval: \n${oval[@]}"
  echo -e "\nHexagon: \n${hexagon[@]}"
  read -p "Press any key to return to the main menu..." anykey
  show_main_menu
}

# Function to show the planets
show_planets() {
  clear
  echo "Planets"
  echo "--------------------------------------------------"
  for planet in "${planets[@]}"; do
    echo "$planet"
  done
  read -p "Press any key to return to the main menu..." anykey
  show_main_menu
}

# Function to show the festivals
show_festivals() {
  clear
  echo "Indian Festivals"
  echo "--------------------------------------------------"
  for festival in "${indian_festivals[@]}"; do
    echo "$festival"
  done
  read -p "Press any key to return to the main menu..." anykey
  show_main_menu
}

# Function to show millets
show_millets() {
  clear
  echo "Millets"
  echo "--------------------------------------------------"
  for millet in "${millets[@]}"; do
    echo "$millet"
  done
  read -p "Press any key to return to the main menu..." anykey
  show_main_menu
}

# Run the script
show_main_menu
